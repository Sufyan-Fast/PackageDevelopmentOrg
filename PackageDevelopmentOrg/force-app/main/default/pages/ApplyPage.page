<apex:page sidebar="false" showHeader="false" controller="FileUploadControllerExtension">
    
        <apex:stylesheet value="{!$Resource.styleclass}"/>
    <html>
        <head>
            <title>Hawk Logix</title>
            <meta charset="UTF-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        </head>
        <body style="padding:0px;margin:0px">
            <section class="navigation">
                <div class="container">
                    <div class="navbar">
                        <div class="logo">
                            <a ><img src="{!$Resource.logo}"/></a>
                        </div>
                        <div class="menubar">
                 <apex:outputLink value="{!url}">
				
					
		<b style="font-size:20px; padding-right:20px;">Home</b>
		<b style="font-size:20px;">Careers</b>
                    
			
                </apex:outputLink>    
			</div>
                        <div class="menubaricon">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </section>
            <div class="mmenu">
                <div class="button">
                    <span><i class="fa fa-times"></i></span>
                </div>
                <div class="logo">
                    <a><img src="{!$Resource.logo}"/></a>
                </div>
                <ul class="pagelist">
                    <li><a>Home</a></li>
                    <li><a>Careers</a></li>
                </ul>
            </div>
            <section class="formsection">
                <div class="container">
                    <div class="formheading" style="padding-bottom:45px; ">
                        <h3 style="font-size:30px;">Please complete the job application below.</h3>
                    </div>
                    <apex:form id="formId" enctype="multipart/form-data">
                        <apex:actionFunction name="submitForm" />
                        <apex:actionRegion >  
                      <div class="form-field" id="form" >

                            <label class="forName" for="name"><span style="color:red; font-size:20px;">*</span>Name:</label>
                            <apex:inputText id="name" value="{!applicantName}" required="false" styleClass="form-input"/>
                            <br/>
                            <apex:pageMessage rendered="{!hasNameError}" severity="error"><b style="color:red; font-size:15px;">Please Enter a Name.</b></apex:pageMessage>
                            
                            <label class="forEmail" for="email"><span style="color:red; font-size:20px;">*</span>Email:</label>
                            <apex:inputText id="email" value="{!Email}" required="false" styleClass="form-input"/>
                            <apex:pageMessage rendered="{!hasEmailError}" severity="error"><b style="color:red;font-size:15px;">Please Enter a Valid Email Address.</b></apex:pageMessage>
                            <br/>       
                            <label class="forphone" for="phone"><span style="color:red; font-size:20px;">*</span>Phone:</label>
                            <apex:inputText id="phone" value="{!phone}" required="false" styleClass="form-input"/>
                            <apex:pageMessage rendered="{!hasPhoneError}" severity="error"><b style="color:red;font-size:15px;">Please Enter a phone number.</b></apex:pageMessage>
                            <br/>
                            <label class="foraddress">Address:</label>
                            <apex:inputTextarea value="{!Address}" required="false" styleClass="form-input"/><br/>
                            <label class="forReffered">Referred By:</label>
                            <apex:inputText value="{!referredby}" styleClass="form-input"/><br/>
                            <label class="forcoverletter">Cover Letter:</label>
                            <apex:inputTextarea value="{!coverletterText}" richText="true" styleClass="form-input"/><br/>
                            <label class="form-label">Upload Cover Letter:</label>
                            <apex:inputfile value="{!coverletter}" filename="coverlettername" styleClass="file-input"/><br/>
                            <label class="form-label">Resume:</label>
                            <apex:inputTextarea value="{!resumeText}" richText="true" styleClass="form-input"/><br/>
                            <label class="form-label"><span style="color:red; font-size:20px;">*</span>Upload Resume:</label>
                            <apex:inputfile value="{!resume}" filename="{!resumeName}" styleClass="file-input" accept=".pdf" /><br/>
                            <apex:pageMessage rendered="{!hasResumeError}" severity="error" ><b style="color:red;font-size:15px;">Please Upload a Resume.</b></apex:pageMessage>
                            </div>
                            <section class="formsubmitionbutn">
                <div class="btnformsubmit">
                                <span style="font-size:15px;">      <apex:commandButton value="Submit" action="{!saveAndRedirect}" style="padding-top:8px; padding-bottom:8px; padding-left:22px; padding-right:20px; " /></span>
                    <button class="btn backbutn">back</button> 
                     </div>
            </section>
                        </apex:actionRegion>
                        
                        
                    </apex:form>
                    

                </div>
                
            </section>
             <apex:form >
            
                   
                    
             
                        
               
                 </apex:form>
       <!--     <section class="formresponsemessage">
                <div class="messagediv">
                    <p class="valueofsubmit">Thank you for Submit</p>
                </div> 
            </section> -->
            <footer>
                <div class="container">
                    <div class="footercontent">
                        <p>Copyright Â© 2000-2023 salesforce.com, inc. All rights reserved</p>
                        <p>Privacy Statement. I. Security Statement. I. Terms of Use</p>
                    </div>
                </div>
            </footer>
        </body>
    </html>
    
</apex:page>