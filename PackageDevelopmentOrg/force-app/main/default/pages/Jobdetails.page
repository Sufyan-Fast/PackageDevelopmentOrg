<apex:page sidebar="false" showHeader="false" standardController="Job__c" extensions="JobPageContRedirect">
   
    <apex:stylesheet value="{!$Resource.styleclass}"/>
    <html>
        <head>
            <title>Hawk Logix</title>
        </head>
        <body>
            <section class="navigation">
                <div class="container">
                    <div class="navbar">
                        <div class="logo">
                            <a href="JobListPage.html"><img src="{!$Resource.logo}" alt="Logo"/></a>
                        </div>
                       <div class="menubar">
                 <apex:outputLink value="{!url}">
				
					
		<b style="font-size:20px; padding-right:20px;">Home</b>
		<b style="font-size:20px;">Careers</b>
                    
			
                </apex:outputLink>    
			</div>
                        <div class="menubaricon">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </section>

            <div class="mmenu">
                <div class="button">
                    <span><i class="fa fa-times"></i></span>
                </div>
                <div class="logo">
                    <a href="JobListPage.html"><img src="{!$Resource.logo}" alt="Logo"/></a>
                </div>
                <ul class="pagelist">
                    <li><a href="JobListPage.html">Home</a></li>
                    <li><a href="JobListPage.html">Careers</a></li>
                </ul>
            </div>

            <section class="detailhero">
                <div class="container">
                    <div class="jobpost">
                        <div class="leftside">
                            <p class="datepst"><span class="by">Date Posted:</span> {!Job__c.Date_Posted__c}</p>
                            <h3>{!Job__c.Name}</h3>
                            <p class="profession"><span class="by">By</span> <span class="compay">HawkLogix Pakistan</span> <span class="by">in</span> Development and IT</p>
                            <div class="button-group">
                                <button class="fulltime">Full Time</button>
                                <button class="urgent">Urgent</button>
                                <button class="inhouse">In House</button>
                            </div>
                        </div>
                        <apex:form >
                        <div class="rightside">
                            <div class="applybutton">
                                <button class="applybtn"><a href="form.html"><apex:commandButton value="Apply" action="{!redirectMethod}"/></a></button>
                            </div>
                        </div>
                            </apex:form>
                    </div>
                </div>
            </section>

            <section class="overviewsection">
                <div class="container">
                    <div class="overviewContent">
                        <div class="left-side">
                        
                            <div class="jobrequeriment">
                                <h4>Job Requirements</h4>
                                <p>{!Job__c.Job_Requirements__c}</p>
                            </div>
                            <div class="jobqualification">
                                <h4>Job Qualifications</h4>
                                <p>{!Job__c.Qualifications__c}</p>
                            </div>
                            <apex:form >
                            <div class="backbtn" style="padding:20px;">
                              <span style="font-size:15px;">  <apex:commandButton value="Back" action="{!returns}" style="padding:10px;" /></span>
                            </div>
                            </apex:form>
                        </div>
                        <div class="rightcontent">
                            <div class="sidebarcontent">
                                <div class="jobnumber">
                                    <p class="title">Job Number</p>
                                    <p>{!Job__c.Job_Number__c}</p>
                                </div>
                                <div class="jobnumber">
                                    <p class="title">Location</p>
                                    <p>Lahore, Pakistan</p>
                                </div>
                                <div class="jobnumber">
                                    <p class="title">Job Type</p>
                                    <p>{!Job__c.Employment_type__c}</p>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <footer>
                <div class="container">
                    <div class="footercontent">
                        <p>Copyright Â© 2000-2023 salesforce.com, inc. All rights reserved</p>
                        <p>Privacy Statement. I. Security Statement. I. Terms of Use</p>
                    </div>
                </div>
            </footer>
        </body>
    </html>
</apex:page>